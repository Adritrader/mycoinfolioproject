{% extends 'base.html.twig' %}

{% block title %}Show User | Back{% endblock %}

{% block body %}
    <!-- Load an icon library to show a hamburger menu (bars) on small screens -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <div class="container-fluid">
        <div class="row d-flex justify-content-center">
            <div class="col-7" style="margin-top: 10px">
                <a href=".."><button class="button-four bg-danger"><i class="fas fa-chevron-circle-left mx-1"></i>Atr√°s</button></a>
            </div>
        </div>


            <!--MESSAGE
              <div class="alert alerta-login" role="alert">
              </div>
              -->

        <a style="text-decoration: none; color: white" class="btn" href="{{ path('users') }}">
            <button class="btn btn-secondary">
                <i class="far fa-arrow-alt-circle-left"></i> Back
            </button>
        </a>
        <div class="row justify-content-center">
                <div class="card col-lg-6 col-md-6 py-2 justify-content-center">
                    <div class="card-header">
                        <h2>User profile</h2>
                    </div>
                    <div class="col-lg-6 col-md-6 py-2">
                        <h4 class="card-title ml-5 mt-3"><strong>Avatar:</strong></h4>
                        <img class="rounded w-100 ml-4" src="{{asset(avatar_public_directory ~ user.avatar)}}" alt="poster">
                    </div>
                    <hr>
                    <input type="hidden" name="id" value="{{  user.id }}">
                    <h4 class="mt-3 ml-5"><strong>Username:</strong> {{  user.username }}</h4>
                    <hr>
                    <h4 class="card-title ml-5"><strong>Email:</strong> {{  user.email }}</h4>
                    <hr>


                </div>

            </div>

            <div class="col-4"></div>
            <div class="col-4">

                <a href="/usuarios/{{  user.id }}/editPerfil"><button class="button-five"><i class="fa fa-edit mr-1"></i>Editar</button></a>
                <a href="/usuarios/{{  user.id }}/editPass"><button class="button-five"><i class="fa fa-edit mr-1"></i>Cambiar Password</button></a>
            </div>
        </div>
{% endblock %}