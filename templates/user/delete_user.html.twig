{% extends 'base.html.twig' %}

{% block title %}Delete Users | Back{% endblock %}

{% block body %}

    <div class="container-fluid">
        <a style="text-decoration: none; color: white" class="btn" href="{{ path('users') }}">
            <button class="btn btn-secondary">
                <i class="far fa-arrow-alt-circle-left"></i> Back
            </button>
        </a>
        <div class="row justify-content-center">


            <!--MESSAGE
              <div class="alert alerta-login" role="alert">
              </div>
              -->


            <div class="card col-lg-4 col-md-6 mt-2">
                <div class="card-header">
                    <h2>Perfil</h2>
                </div>
                <div class="col-lg-4 col-md-4">
                    <img class="rounded w-100" src="{{asset(avatar_public_directory ~ user.avatar)}}" alt="poster">
