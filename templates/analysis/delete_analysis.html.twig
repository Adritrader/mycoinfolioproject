{% extends 'base.html.twig' %}

{% block title %}Delete Analysis | Back{% endblock %}

{% block body %}

    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Analysis</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page"><a href="{{ path('analysis') }}">Analysis</a></li>
                            <li class="breadcrumb-item active" aria-current="page"><a href="{{ path('delete_analysis', {id: analysis.id}) }}">Delete</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <hr>
    </div>

    <div class="container-fluid">
        <div class="row justify-content-center">


            <!--MESSAGE
              <div class="alert alerta-login" role="alert">
              </div>
              -->
            <div class="col-12">
                <h2 class="mt-4">Delete Analysis</h2>
                <hr>
            </div>


            <section class="card border shadow mt-3">
                <div class="row p-3">
                    <div class="col-3">
                        <img class="w-100 p-3" src="{{ asset(analysis_public_directory ~  analysis.image) }}" alt="imagen-entrada-blog">
                    </div>
                    <div class="col-8">
                        <h1 class="titulo-entrada">{{ analysis.title }}</h1>
                        <p class="fecha-entrada"><i class="fas fa-user px-2"></i>{{ analysis.user.username }}<i class="fas fa-calendar px-2"></i>Published on: <span>{{ analysis.date | date }}</span><span class="mx-5 px-3 bg-primary">{{analysis.category.name}}</span></p>
                        <p class="texto-entrada">{{ analysis.content }} </p>
                        <div class="row justify-content-end mt-4 mb-0">
                                <div class="col-12 col-lg-12 col-md-6">

                                    <h2>Do you want to delete this analysis?</h2>

                                    <a href="{{ path('destroy_analysis', {id: analysis.id}) }}"><button class="btn btn-danger">Si</button></a>
                                    <a href="{{ path('analysis') }}"><button class="btn btn-primary">No</button></a>


                                </div>

                        </div>
                    </div>
                </div>
            </section>

        </div>
    </div>
{% endblock %}