{% extends 'base.html.twig' %}

{% block title %}Analysis | Back{% endblock %}

{% block body %}
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Analysis</h4>
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('index') }}">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page"><a href="{{ path('analysis') }}">Analysis</a></li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <hr>
</div>
    <div class="container-fluid">
        <div class="row fila-blog">
            <div class="container-fluid">
                <div class="row justify-content-start">
                    <div class="col-7 col-lg-6 ml-3">
                        <div><a style="text-decoration: none; color: white" class="btn" href="{{ path('create_analysis') }}">
                                <button class="btn btn-primary">
                                    <i class="fa fa-plus-circle">
                                    </i> Add analysis
                                </button>

                            </a>
                            <a style="text-decoration: none; color: white" class="btn" href="{{ path('create_category') }}">
                                <button class="btn btn-primary">
                                    <i class="fa fa-plus-circle">
                                    </i> Add category
                                </button>

                            </a>
                        </div>
                    </div>
                </div>
                <hr>
            <div class="col-12 col-entradas-blog">

                <h2>Analysis</h2>

                {% if analysis %}
                {% for analysi in analysis %}


                    <section class="card border shadow mt-3">
                    <div class="row p-3">
                        <div class="col-3">
                            <img class="w-100 p-3" src="{{ asset(avatar_public_directory ~  analysi.image) }}" alt="imagen-entrada-blog">
                        </div>
                        <div class="col-8">
                            <h1 class="titulo-entrada">{{ analysi.title }}</h1>
                            <p class="fecha-entrada"><i class="fas fa-calendar"></i>&nbsp;Published on: <span>{{ analysi.date | date }}</span><span class="mx-5 px-3 bg-primary">{{analysi.category.name}}</span></p>
                            <p class="texto-entrada">{{ analysi.content }} </p>
                            <div class="row justify-content-end mt-4 mb-0">
                                <a href="{{path('create_comment', {id: analysi.id})}}"><button class="btn btn-cyan mx-1">Reply</button></a>
                                <a href="{{path('show_analysis', {id: analysi.id})}}"><button class="btn btn-info mx-1">Show</button></a>
                                <a href="{{path('edit_analysis', {id: analysi.id})}}"><button class="btn btn-warning mx-1">Edit</button></a>
                                <a href="{{path('delete_analysis', {id: analysi.id})}}"><button class="btn btn-danger mx-1">Delete</button></a>
                            </div>
                        </div>
                    </div>
                </section>


                {% endfor %}
                {% else %}
                    <h2>There aren't any analysis</h2>
                {% endif %}



            </div>
        </div>
    </div>
{% endblock %}
