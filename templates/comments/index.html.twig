{% extends 'base.html.twig' %}

{% block title %}Analysis | Back{% endblock %}

{% block body %}
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Comments</h4>
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page"><a href="{{ path('comments') }}">Comments</a></li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <hr>
</div>
<div class="container-fluid">
    <div class="row fila-blog">
        <div class="container-fluid">
            <div class="col-12 col-entradas-blog">

                <h2>Comments</h2>

                {% if comments %}
                    {% for comment in comments %}

                        <section class="card border shadow mt-3">
                            <div class="row p-3">
                                {%  if comment.picture %}
                                <div class="col-3">
                                    <img class="w-100 p-3" src="{{ asset(analysis_public_directory ~  comment.picture) }}" alt="imagen-entrada-blog">
                                </div>
                                {%  endif %}
                                <div class="col-8">
                                    <p class="fecha-entrada"><i class="fas fa-user"></i>{{ comment.user.username }}<i class="fas fa-calendar"></i>&nbsp;Published on: <span>{{ comment.date | date }}</span></p>
                                    <p class="texto-entrada">{{ comment.message }} </p>
                                    <div class="row justify-content-end mt-4 mb-0">
                                        <a href="{{path('edit_comment', {id: comment.id})}}"><button class="btn btn-warning mx-1">Edit</button></a>
                                        <a href="{{path('delete_comment', {id: comment.id})}}"><button class="btn btn-danger mx-1">Delete</button></a>
                                    </div>
                                </div>
                            </div>
                        </section>

                    {% endfor %}
                {% else %}
                    <h2>There aren't any comments</h2>
                {% endif %}

            </div>
            </div>
        </div>
    </div>
    {% endblock %}
