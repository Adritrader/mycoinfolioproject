{% extends 'base.html.twig' %}

{% block title %}Portfolios | Back{% endblock %}

{% block body %}
<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">Portfolios</h4>
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page"><a href="{{ path('portfolios') }}">Portfolios</a>
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <hr>
</div>
<div class="container-fluid">
    <div class="row fila-blog">
        <div class="container-fluid">
            <div class="row justify-content-start">
                <div class="col-7 col-lg-6 ml-3">
                    <div><a style="text-decoration: none; color: white" class="btn"
                            href="{{ path('create_portfolios', {id: app.user.id}) }}">
                            <button class="btn btn-primary">
                                <i class="fa fa-plus-circle">
                                </i> Add portfolio
                            </button>

                        </a>
                    </div>
                </div>
            </div>
            <hr>


            {% if portfolios %}
                {% for portfolio in portfolios %}
                    <div class="row">
                        <div class="col-8">
                            <div class="list-group-item">
                                <span class="text-center mx-3">{{ portfolio.id }}</span>
                                <span class="text-center mx-3">{{ portfolio.createdat | date }}</span>
                                <span class="text-center mx-3">{{ portfolio.modifiedat | date }}</span>
                                <span class="text-center mx-3">{{ portfolio.user.id }}</span>
                                <hr>

                                <a style="text-decoration: none; color: white" class="btn"
                                   href="{{ path('show_portfolio', {id: portfolio.id}) }}">
                                    <button class="btn btn-primary">
                                        <i class="fa fa-plus-circle">
                                        </i> Show Portfolio
                                    </button>

                                </a>


                            </div>

                        </div>
                    </div>

                {% endfor %}
            {% else %}
                <h2>There aren't portfolios</h2>
            {% endif %}
            {% endblock %}
