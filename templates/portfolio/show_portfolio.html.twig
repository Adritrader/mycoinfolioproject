{% extends 'base.html.twig' %}

{% block title %}Show Portfolio | Back{% endblock %}

{% block body %}
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Portfolio</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page"><a href="{{ path('portfolios') }}">Portfolio</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <hr>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="container-fluid">
                {% if app.user %}
                <a style="text-decoration: none; color: white" href="{{ path('create_crypto', {id: portfolio.id}) }}" class="btn">
                    <button class="btn btn-primary">
                        <i class="fa fa-plus-circle">
                        </i> Add coin
                    </button>

                </a>
                {% endif %}
                <hr>
                <div class="col-9">
                    <section class="card border shadow mt-3">
                        <div class="row p-3">
                            <div class="col-12">
                                <h1 class="titulo-entrada">{{ portfolio.user.username }} Portfolio</h1>
                                <p class="fecha-entrada"><i class="fas fa-calendar"></i>&nbsp;Created: <span>{{ portfolio.createdat | date }}</span></p>
                                <hr>
                                <div class="row justify-content-start mt-4 mb-0">
                                            <table class="table table-dark">
                                                <thead>
                                                <tr>
                                                    <th scope="col">Ticker</th>
                                                    <th scope="col">Entry Price $</th>
                                                    <th scope="col">Buy Date</th>
                                                    <th scope="col">Quantity</th>
                                                    <th scope="col">Actions</th>
                                                </tr>
                                                </thead>
                                                <tbody>
                                                <tr>
                                                    {% for contain in contain %}
                                                    <td>
                                                        {{ contain.crypto.name }}
                                                    </td>
                                                    <td>
                                                        {{ contain.crypto.entryprice }}
                                                    </td>
                                                    <td>
                                                        {{ contain.crypto.buydate | date }}
                                                    </td>
                                                    <td>
                                                        {{ contain.crypto.quantity }}
                                                    </td>
                                                    <td>
                                                        <a href="{{path('edit_crypto', {id: portfolio.id, id_crypto: contain.crypto.id})}}"><button class="btn btn-info mx-1">Edit</button></a>
                                                    </td>
                                                </tr>
                                                {% endfor %}
                                                </tbody>
                                            </table>



                                </div>
                            </div>
                        </div>
                    </section>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
