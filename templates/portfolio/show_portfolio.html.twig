{% extends 'base.html.twig' %}

{% block title %}Show Portfolio | Back{% endblock %}

{% block body %}
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Portfolio</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page"><a href="{{ path('portfolios') }}">Portfolio</a></li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
        <hr>
    </div>
    <div class="container-fluid">
        <div class="row fila-blog">
            <div class="container-fluid">
                <a style="text-decoration: none; color: white" href="{{ path('create_crypto', {id: portfolio.id}) }}" class="btn">
                    <button class="btn btn-primary">
                        <i class="fa fa-plus-circle">
                        </i> Add coin
                    </button>

                </a>
                <hr>
                <div class="col-12 col-entradas-blog">

                    <h2>Portfolio</h2>
                    <section class="card border shadow mt-3">
                        <div class="row p-3">
                            <div class="col-8">
                                <h1 class="titulo-entrada">{{ portfolio.id }}</h1>
                                <p class="fecha-entrada"><i class="fas fa-calendar"></i>&nbsp;Published on: <span>{{ portfolio.createdat | date }}</span></p>

                                <div class="row justify-content-end mt-4 mb-0">

                                </div>
                            </div>
                        </div>
                    </section>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
